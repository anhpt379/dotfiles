#!/usr/bin/env bash

nvim='
  exec nvim \
    -u NONE \
    -c "map <silent> q :<C-u>qa!<CR>" \
    -c "set shell=bash scrollback=100000 laststatus=0 clipboard+=unnamedplus nowrap incsearch ignorecase smartcase" \
    -c "autocmd TermEnter * stopinsert" \
    -c "nmap C /^commit\\\|^added:\\\|^deleted:\\\|^modified:<CR>" \
    -c "nmap A ?Applied catalog in .* seconds<CR>" \
    -c "nmap <CR> :nohlsearch<CR> | nmap <ESC> :nohlsearch<CR>" \
    -c "nmap H zH | nmap L zL | nmap h zh | nmap l zl" \
    -c "nmap a <nop> | nmap i <nop>" \
'
extra_args=''
if [ "$1" = "+G" ]; then
  shift
  if [ $# -eq 0 ]; then
    extra_args+=' -c "autocmd TermClose * normal G"'
  else
    extra_args+=' -c "normal G"'
  fi
fi

if [ $# -eq 0 ]; then
  extra_args+=" -c 'terminal sed </dev/fd/63 -e \"s/'$'\x1b'']8;;file:[^\]*[\]//g\" && sleep 0.01 && printf \"'$'\x1b'']2;\"' 63<&0 0</dev/null"
fi

eval "${nvim} ${extra_args} ${@: -1}"
