{
  "title": "COMMAND+V to paste without formatting",
  "rules": [
    {
      "description": "COMMAND+V to paste without formatting",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": ["command", "option", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.Notes$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": ["command", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$",
                "^com\\.tinyspeck\\.slackmacgap$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
