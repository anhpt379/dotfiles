{
  "title": "Browser key bindings",
  "rules": [
    {
      "description": "Browser - Focus on the address bar with COMMAND+O",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["left_command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Safari$",
                "^com\\.google\\.Chrome$",
                "^org\\.mozilla\\.firefox$",
                "^com\\.kagi\\.kagimacOS$",
                "^company\\.thebrowser\\.Browser$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Browser - Copy URL in the address bar with COMMAND+Y",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "y",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["left_command"]
            },
            {
              "key_code": "c",
              "modifiers": ["left_command"]
            },
            {
              "key_code": "escape"
            },
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Safari$",
                "^com\\.google\\.Chrome$",
                "^org\\.mozilla\\.firefox$",
                "^com\\.kagi\\.kagimacOS$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Safari - Open new tab at the end",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": ["left_command", "left_option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.Safari$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Browser - Accept suggestion & go to the url with CONTROL+F",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Safari$",
                "^com\\.google\\.Chrome$",
                "^org\\.mozilla\\.firefox$",
                "^com\\.kagi\\.kagimacOS$",
                "^company\\.thebrowser\\.Browser$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Browser - Move tab left/right with COMMAND+[/]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["command", "option"]
            },
            {
              "key_code": "right_arrow",
              "modifiers": ["command"]
            },
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Safari$",
                "^com\\.google\\.Chrome$",
                "^org\\.mozilla\\.firefox$",
                "^com\\.kagi\\.kagimacOS$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["command", "option"]
            },
            {
              "key_code": "left_arrow",
              "modifiers": ["command"]
            },
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Safari$",
                "^com\\.google\\.Chrome$",
                "^org\\.mozilla\\.firefox$",
                "^com\\.kagi\\.kagimacOS$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
