{
  "title": "ESCAPE (F19) to lock screen",
  "rules": [
    {
      "description": "Start screen saver on pressing ESCAPE (F19) key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "shell_command": "open -b com.apple.ScreenSaver.Engine"
            }
          ]
        }
      ]
    }
  ]
}
