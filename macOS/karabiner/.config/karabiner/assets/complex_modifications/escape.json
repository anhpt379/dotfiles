{
  "title": "ESCAPE to lock screen",
  "rules": [
    {
      "description": "Start screen saver on pressing ESCAPE key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "shell_command": "open -b com.apple.ScreenSaver.Engine"
            }
          ]
        }
      ]
    },
    {
      "description": "Switch between opening windows with COMMAND+ESCAPE",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    }
  ]
}
