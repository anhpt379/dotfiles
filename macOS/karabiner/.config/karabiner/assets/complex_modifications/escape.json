{
  "title": "ESCAPE key",
  "rules": [
    {
      "description": "Escape: Start mission control by pressing ESCAPE alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "key_code": "mission_control"
            }
          ]
        }
      ]
    },
    {
      "description": "Escape: Switch windows of the same app with CMD+ESCAPE",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    }
  ]
}
