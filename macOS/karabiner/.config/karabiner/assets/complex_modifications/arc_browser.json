{
  "title": "Arc Browser key bindings",
  "rules": [
    {
      "description": "COMMAND+U to undo close tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": ["command", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^company\\.thebrowser\\.Browser$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "COMMAND+` to switch to last used tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^company\\.thebrowser\\.Browser$"]
            }
          ]
        }
      ]
    },
    {
      "description": "COMMAND+O to open a new tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": ["command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^company\\.thebrowser\\.Browser$"]
            }
          ]
        }
      ]
    }
  ]
}
