{
  "title": "CAPSLOCK to act as both CONTROL & ESCAPE",
  "rules": [
    {
      "description": "Map CAPSLOCK to CONTROL on hold, and to ESCAPE on tap",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        }
      ]
    }
  ]
}
