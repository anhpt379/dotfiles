{
  "title": "Change CapsLock to Control/ESC",
  "rules": [
    {
      "description": "Map CapsLock to ESC when tapped, and to Control when held",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ]
}
