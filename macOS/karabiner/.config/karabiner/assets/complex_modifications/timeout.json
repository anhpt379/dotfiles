{
  "title": "TimeOut app",
  "rules": [
    {
      "description": "TimeOut: Postpone next break by pressing COMMAND+ESCAPE",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "f9",
              "modifiers": ["fn"]
            }
          ]
        }
      ]
    },
    {
      "description": "TimeOut: Start next break by pressing the OPTION+ESCAPE",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "f8",
              "modifiers": ["fn"]
            }
          ]
        }
      ]
    }
  ]
}
