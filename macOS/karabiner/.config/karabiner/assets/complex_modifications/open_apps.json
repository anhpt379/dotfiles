{
  "title": "Open macOS apps with LEFT_CONTROL+RIGHT_CONTROL+C/K/N/M/S",
  "rules": [
    {
      "description": "Open Chrome with LEFT_CONTROL+RIGHT_CONTROL+C",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["left_control", "right_control"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Google Chrome.app'"
            }
          ]
        }
      ]
    },
