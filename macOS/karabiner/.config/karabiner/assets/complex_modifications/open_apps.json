{
  "title": "Open macOS apps with COMMAND+CONTROL+C/K/N/M/S",
  "rules": [
    {
      "description": "Open Arc with COMMAND+CONTROL+C",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["command", "control"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Arc.app'"
            }
          ]
        }
      ]
    },
