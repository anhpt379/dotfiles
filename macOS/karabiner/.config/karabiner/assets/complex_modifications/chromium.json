{
  "title": "Chromium-based browsers key bindings",
  "rules": [
    {
      "description": "Chromium: Focus on the address bar with COMMAND+O",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Chromium: Copy URL in the address bar with COMMAND+Y",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "y",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["command"]
            },
            {
              "key_code": "c",
              "modifiers": ["command"]
            },
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Chromium: Accept suggestion & go with CONTROL+F",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Chromium: Move tab left/right (or up/down) with COMMAND+[/]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "page_down",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "page_up",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Chromium: Search tabs with CONTROL+SPACE",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": ["command", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Chromium: Switch tabs with COMMAND+N/P",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
