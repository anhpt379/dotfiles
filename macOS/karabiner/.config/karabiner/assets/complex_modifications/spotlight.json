{
  "title": "Spotlight",
  "rules": [
    {
      "description": "Spotlight: Move down & up with COMMAND+N/P",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.apple\\.Terminal$",
                "^com\\.github\\.wez\\.wezterm$",

                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.apple\\.Terminal$",
                "^com\\.github\\.wez\\.wezterm$",

                "^com\\.microsoft\\.edgemac$",
                "^com\\.google\\.Chrome$",
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
