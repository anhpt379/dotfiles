{
  "title": "HJKL keys",
  "rules": [
    {
      "description": "HJKL: Map COMMAND+H/J/K/L to LEFT/DOWN/UP/RIGHT",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["command"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "HJKL: Map OPTION+H/J/K/L to OPTION+LEFT/DOWN/UP/RIGHT",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["left_option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["left_option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["option"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_option"]
            }
          ]
        }
      ]
    },
    {
      "description": "HJKL: Map CONTROL+H/J/K/L to HOME/PAGE_DOWN/PAGE_UP/END",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "home"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "page_down"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.apple\\.Terminal$",
                "^com\\.github\\.wez\\.wezterm$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "page_up"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.apple\\.Terminal$",
                "^com\\.github\\.wez\\.wezterm$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "end"
            }
          ]
        }
      ]
    }
  ]
}
