{
  "title": "macOS apps",
  "rules": [
    {
      "description": "macOS: Open Brave with COMMAND+1",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Brave Browser.app' && open -g ~/Applications/MoveCursorToCenterOfActiveWindow.app"
            }
          ]
        }
      ]
    },
    {
      "description": "macOS: Open Kitty with COMMAND+2",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a Kitty.app && open -g ~/Applications/MoveCursorToCenterOfActiveWindow.app"
            }
          ]
        }
      ]
    },
    {
      "description": "macOS: Open Notes with COMMAND+3",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a Notes.app && open -g ~/Applications/MoveCursorToCenterOfActiveWindow.app"
            }
          ]
        }
      ]
    },
    {
      "description": "macOS: Open Zoom with COMMAND+4",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "4",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a Zoom.us.app && open -g ~/Applications/MoveCursorToCenterOfActiveWindow.app"
            }
          ]
        }
      ]
    },
    {
      "description": "macOS: Open Finder with COMMAND+5",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "5",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a Finder.app && open -g ~/Applications/MoveCursorToCenterOfActiveWindow.app"
            }
          ]
        }
      ]
    },
    {
      "description": "macOS: Switch to next window with COMMAND+CONTROL+N",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["command", "control"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "macOS: Switch to previous window with COMMAND+CONTROL+P",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["command", "control"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["command", "shift"]
            }
          ]
        }
      ]
    }
  ]
}
