{
  "title": "Slack key bindings",
  "rules": [
    {
      "description": "Slack: COMMAND+N to jump to next channel",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Slack: COMMAND+P to jump to previous channel",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Slack: CONTROL+F to scroll to next day",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "page_down",
              "modifiers": ["shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Slack: CONTROL+B to scroll to previous day",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "page_up",
              "modifiers": ["shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Slack: COMMAND+R to add a reaction",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "r",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "backslash",
              "modifiers": ["command", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Slack: COMMAND+E to edit last message",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Slack: COMMAND+U to go to Unreads",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": ["command", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Slack: COMMAND+T to go to Threads",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": ["command", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Slack: COMMAND+W to close thread view",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "period",
              "modifiers": ["command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Slack: COMMAND+O to open thread view",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "repeat": false
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "right_arrow",
              "repeat": false
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [{ "key_code": "down_arrow" }]
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.tinyspeck\\.slackmacgap$"]
            }
          ]
        }
      ]
    }
  ]
}
