{
  "title": "Firefox key bindings",
  "rules": [
    {
      "description": "Firefox: Focus on the address bar with COMMAND+O",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["command"]
            },
            {
              "set_variable": {
                "name": "address_bar_is_focused",
                "value": true
              }
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Firefox: CAPSLOCK (CONTROL/ESCAPE) to hide the address bar",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f6"
            },
            {
              "set_variable": {
                "name": "address_bar_is_focused",
                "value": false
              }
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            },
            {
              "type": "variable_if",
              "name": "address_bar_is_focused",
              "value": true
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            },
            {
              "set_variable": {
                "name": "address_bar_is_focused",
                "value": false
              }
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            },
            {
              "type": "variable_if",
              "name": "address_bar_is_focused",
              "value": false
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter"
          },
          "to": [
            {
              "key_code": "right_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "set_variable": {
                "name": "address_bar_is_focused",
                "value": false
              }
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            },
            {
              "type": "variable_if",
              "name": "address_bar_is_focused",
              "value": true
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter"
          },
          "to": [
            {
              "key_code": "right_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            },
            {
              "type": "variable_if",
              "name": "address_bar_is_focused",
              "value": false
            }
          ]
        }
      ]
    },
    {
      "description": "Firefox: Copy URL in the address bar with COMMAND+Y",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "y",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["command"]
            },
            {
              "key_code": "c",
              "modifiers": ["command"]
            },
            {
              "key_code": "f6"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Firefox: Move tab left/right with COMMAND+[/]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "page_down",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "page_up",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Firefox: Switch tabs with COMMAND+N/P",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "f6"
            },
            {
              "set_variable": {
                "name": "address_bar_is_focused",
                "value": false
              }
            },
            {
              "key_code": "tab",
              "modifiers": ["control"]
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"],
              "type": "frontmost_application_if"
            },
            {
              "type": "variable_if",
              "name": "address_bar_is_focused",
              "value": true
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["control"]
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"],
              "type": "frontmost_application_if"
            },
            {
              "type": "variable_if",
              "name": "address_bar_is_focused",
              "value": false
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "f6"
            },
            {
              "set_variable": {
                "name": "address_bar_is_focused",
                "value": false
              }
            },
            {
              "key_code": "tab",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"],
              "type": "frontmost_application_if"
            },
            {
              "type": "variable_if",
              "name": "address_bar_is_focused",
              "value": true
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"],
              "type": "frontmost_application_if"
            },
            {
              "type": "variable_if",
              "name": "address_bar_is_focused",
              "value": false
            }
          ]
        }
      ]
    }
  ]
}
