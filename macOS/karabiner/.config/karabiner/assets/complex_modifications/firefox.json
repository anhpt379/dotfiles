{
  "title": "Firefox key bindings",
  "rules": [
    {
      "description": "Firefox: Focus on the address bar with COMMAND+O",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Firefox: Unfocus on the address bar with COMMAND+SHIFT+O",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["command", "shift"]
            }
          },
          "to": [
            {
              "key_code": "f6"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Firefox: Copy URL in the address bar with COMMAND+Y",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "y",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["command"]
            },
            {
              "key_code": "c",
              "modifiers": ["command"]
            },
            {
              "key_code": "f6"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Firefox: Accept suggestion & go to the url with CONTROL+F",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Firefox: Move tab left/right with COMMAND+[/]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "page_down",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "page_up",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Firefox: Switch tabs with COMMAND+N/P",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["control"]
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"],
              "type": "frontmost_application_if"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": ["^org\\.mozilla\\.firefox$"],
              "type": "frontmost_application_if"
            }
          ]
        }
      ]
    }
  ]
}
