# vim: ft=conf
tap 'Homebrew/homebrew-autoupdate'
tap 'homebrew/bundle'
tap 'homebrew/cask-fonts'
tap 'homebrew/cask-versions'
tap 'homebrew/services'
tap 'superbrothers/opener'
tap 'dimentium/autoraise'
tap 'hashicorp/tap'
tap 'anhpt379/homebrew-neovim-nightly'

cask_args appdir: "~/Applications", require_sha: true, no_quarantine: true

# Apps
cask 'brave-browser'
cask 'flux'
cask 'font-fira-code'
cask 'hiddenbar'
cask 'karabiner-elements'
cask 'key-codes'
cask 'kitty'
cask 'lunar'
cask 'maccy'
cask 'neovim-nightly'
cask 'qbserve'
cask 'rectangle'
cask 'screenfocus'
cask 'stats'
cask 'time-out'
cask 'wezterm'

# Mac App Store
mas 'Amphetamine', id: 937984704
mas 'Fantastical', id: 975937182

brew 'autoraise', args: ['with-dexperimental_focus_first'], restart_service: true
brew 'bash'
brew 'bind'  # to get `dig` command
brew 'coreutils'
brew 'curl'
brew 'eza'
brew 'fd'
brew 'fish'
brew 'fontforge'
brew 'fzf'
brew 'gawk'
brew 'git'
brew 'gnu-sed'
brew 'go'    # to build Kitty from source
brew 'grc'
brew 'grep'
brew 'hashicorp/tap/vault'
brew 'jq'    # for youtube-dl/download.sh to work
brew 'less'
brew 'lf'
brew 'lima'
brew 'mas'
brew 'neovim'
brew 'ripgrep'
brew 'rsync'
brew 'stow'
brew 'telnet'
brew 'trash'
brew 'wget'
brew 'xh'
brew 'yt-dlp'

brew 'corkscrew'
brew 'noti'
brew 'opener'

brew 'ffmpeg'
brew 'atomicparsley'
