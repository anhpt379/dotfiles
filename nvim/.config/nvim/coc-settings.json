{
  "suggest.noselect": false,
  "suggest.minTriggerInputLength": 2,
  "suggest.maxCompleteItemCount": 10,
  "suggest.numberSelect": false,
  "suggest.defaultSortMethod": "none",
  "git.addGBlameToVirtualText": true,
  "yank.highlight.enable": false,
  "yank.enableCompletion": false,
  "diagnostic.errorSign": "‚ÄºÔ∏è",
  "diagnostic.warningSign": "‚ö†Ô∏è",
  "diagnostic.infoSign": "‚ÑπÔ∏è",
  "diagnostic.hintSign": "üí¨",
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "email": "languagetool",
    "markdown": ["markdownlint"],
    "gitcommit": ["languagetool", "vale"],
    "text": ["languagetool", "vale"],
    "sh": "shellcheck",
    "Dockerfile": "hadolint"
  },
  "diagnostic-languageserver.linters": {
    "languagetool": {
      "command": "/Users/panh/.config/nvim/bin/remote_languagetool.py",
      "debounce": 300,
      "args": ["-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "LT",
      "parseJson": {
        "line": "line",
        "column": "column",
        "message": "${message}",
        "security": "level"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "info": "info",
        "style": "hint"
      }
    },
    "vale": {
      "command": "/Users/panh/.config/nvim/bin/vale.py",
      "debounce": 100,
      "args": [],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "Vale",
      "parseJson": {
        "line": "line",
        "column": "column",
        "message": "${message}",
        "security": "level"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "info": "info",
        "suggestion": "hint"
      }
    },
    "write-good": {
      "command": "write-good",
      "debounce": 100,
      "args": ["--text=%text"],
      "offsetLine": 0,
      "offsetColumn": 1,
      "sourceName": "write-good",
      "formatLines": 1,
      "formatPattern": [
        "(.*)\\s+on\\s+line\\s+(\\d+)\\s+at\\s+column\\s+(\\d+)\\s*$",
        {
          "line": 2,
          "column": 3,
          "message": 1
        }
      ]
    },
    "vint": {
      "command": "/Users/anh/Library/Python/3.7/bin/vint",
      "debounce": 100,
      "args": ["--enable-neovim", "-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "vint",
      "formatLines": 1,
      "formatPattern": [
        "[^:]+:(\\d+):(\\d+):\\s*(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "message": 3
        }
      ]
    },
    "shellcheck": {
      "command": "shellcheck",
      "debounce": 100,
      "args": ["--format", "json", "-"],
      "sourceName": "shellcheck",
      "parseJson": {
        "line": "line",
        "column": "column",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${message} [${code}]",
        "security": "level"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "info": "info",
        "style": "hint"
      }
    },
    "hadolint": {
      "command": "hadolint",
      "sourceName": "hadolint",
      "args": ["-f", "json", "-"],
      "parseJson": {
        "line": "line",
        "column": "column",
        "security": "level",
        "message": "${message} [${code}]"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "info": "info",
        "style": "hint"
      }
    }
  },
  "languageserver": {
    "puppet": {
      "command": "ruby",
      "args": [
        "/Users/panh/Workspace/puppet-editor-services/puppet-languageserver",
        "--stdio",
        "--puppet-settings=--moduledir,/Users/panh/Workspace/puppet/puppet/modules"
      ],
      "cwd": "/Users/panh/Workspace/puppet-editor-services",
      "filetypes": ["puppet"],
      "rootPatterns": [".git/", "metadata.json"]
    }
  }
}
