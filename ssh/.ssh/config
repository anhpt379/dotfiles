# Expose pbcopy/pbpaste to remote host
RemoteForward 2224 127.0.0.1:2224
RemoteForward 2225 127.0.0.1:2225

# Fix pbcopy/pbpaste doesn't work on hosts that have host key changed
StrictHostKeyChecking no
UserKnownHostsFile /dev/null
LogLevel QUIET

TCPKeepAlive yes
ServerAliveInterval 60
ServerAliveCountMax 10

ControlPath    ~/.ssh/cm-%r@%h:%p
ControlMaster  auto
ControlPersist 24h

# Speed up ssh connection
AddressFamily inet
VerifyHostKeyDNS no

Include conf.d/*
