[user]
  email = anh.pham@booking.com
  name = Anh Pham

[core]
  editor = nvim

[color]
  ui = true

[alias]
  amend = commit --amend
  merged = branch --merged
  pushf = push --force-with-lease
  undo = reset --soft HEAD^
  prune = fetch --prune
  stash-all = stash save --include-untracked

[status]
  showUntrackedFiles = all

[pager]
  log = `brew --prefix git`/share/git-core/contrib/diff-highlight/diff-highlight | less
  show = `brew --prefix git`/share/git-core/contrib/diff-highlight/diff-highlight | less
  diff = `brew --prefix git`/share/git-core/contrib/diff-highlight/diff-highlight | less

[diff]
  algorithm = histogram

[color "diff"]
  commit = green
  meta = yellow
  frag = cyan
  old = red
  new = green
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[help]
  autocorrect = 5

[commit]
  template = ~/.gitmessage

[pull]
  rebase = true

[push]
  default = current
