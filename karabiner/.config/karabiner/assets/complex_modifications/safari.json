{
  "title": "Safari key bindings",
  "rules": [
    {
      "description": "Focus on the address bar with Cmd+O",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["left_command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.Safari$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Accept suggestion & go to the url with CapsLock+G",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "g",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.Safari$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Switch to previous tab with Enter+`",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["right_control"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control", "left_shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.apple\\.Safari$"]
            }
          ]
        }
      ]
    }
  ]
}
