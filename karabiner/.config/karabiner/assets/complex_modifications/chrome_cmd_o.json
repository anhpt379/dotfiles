{
  "title": "Focus on Chrome address bar with Cmd+O",
  "rules": [
    {
      "description": "Map Cmd+O to Cmd+L",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["left_command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.google\\.Chrome$"]
            }
          ]
        }
      ]
    }
  ]
}
