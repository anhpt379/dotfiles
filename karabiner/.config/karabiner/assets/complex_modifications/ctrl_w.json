{
  "title": "Use ⌥⌫/⌘⌫ to delete words everywhere in Kitty",
  "rules": [
    {
      "description": "Map ⌥⌫/⌘⌫ to ⌃W",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": ["left_control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^net\\.kovidgoyal\\.kitty$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": ["left_control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^net\\.kovidgoyal\\.kitty$"]
            }
          ]
        }
      ]
    }
  ]
}
