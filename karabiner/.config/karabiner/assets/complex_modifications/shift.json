{
  "title": "Map shift keys to parentheses if pressed alone",
  "rules": [
    {
      "description": "Map shift keys to () if pressed alone",
      "manipulators": [
        {
          "description": "Post ( if left_shift pressed alone",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": []
            }
          ],
          "to_if_alone": [
            {
              "key_code": "9",
              "modifiers": ["left_shift"]
            }
          ],
          "type": "basic"
        },
        {
          "description": "Post ) if right_shift is pressed alone",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": []
            }
          ],
          "to_if_alone": [
            {
              "key_code": "0",
              "modifiers": ["right_shift"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
