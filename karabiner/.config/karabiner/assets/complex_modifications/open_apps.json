{
  "title": "Open macOS apps with Cmd+<number>",
  "rules": [
    {
      "description": "Open Safari with Cmd+1",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Safari.app'"
            }
          ]
        }
      ]
    },
    {
