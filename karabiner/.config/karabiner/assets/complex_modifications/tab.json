{
  "title": "Launch applications",
  "rules": [
    {
      "description": "Open Chrome, Kitty, Notes, Finder with Tab+C/K/N/F",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "tab_pressed",
                "value": 1
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "tab_pressed",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "tab_pressed",
              "value": 1
            }
          ],
          "from": {
            "key_code": "c"
          },
          "to": [
            {
              "shell_command": "open -a 'Google Chrome.app'"
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "tab_pressed",
              "value": 1
            }
          ],
          "from": {
            "key_code": "k"
          },
          "to": [
            {
              "shell_command": "open -a 'Kitty.app'"
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "tab_pressed",
              "value": 1
            }
          ],
          "from": {
            "key_code": "n"
          },
          "to": [
            {
              "shell_command": "open -a 'Notes.app'"
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "tab_pressed",
              "value": 1
            }
          ],
          "from": {
            "key_code": "s"
          },
          "to": [
            {
              "shell_command": "open -a 'Slack.app'"
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "tab_pressed",
              "value": 1
            }
          ],
          "from": {
            "key_code": "f"
          },
          "to": [
            {
              "shell_command": "open -a 'Finder.app'"
            }
          ]
        }
      ]
    }
  ]
}
