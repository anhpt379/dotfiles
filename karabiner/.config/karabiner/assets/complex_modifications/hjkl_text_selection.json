{
  "title": "Text selection with HJKL",
  "rules": [
    {
      "description": "Map ctrl+shift+h/j/k/l to shift+left/down/up/right",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["control", "shift"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["control", "shift"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["control", "shift"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["control", "shift"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Map shift+option+h/j/k/l to shift+option+left/down/up/right",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["shift", "left_option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["shift", "left_option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["shift", "left_option"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["shift", "left_option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["shift", "left_option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["shift", "left_option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["shift", "left_option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["shift", "left_option"]
            }
          ]
        }
      ]
    }
  ]
}
